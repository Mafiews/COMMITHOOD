<div class="container-event">
  <div class="banner-show" style="background-image: linear-gradient(rgba(0,0,0,0.2),rgba(0,0,0,0.2)), url('<%= cl_image_path @event.photo.key, crop: :fill %>')">
    <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="avatar-bordered" id="avatar-ngo">
  </div>
  <div class="d-flex" id="events-details">
    <div class="col-8 ">
      <h1 class="bold"><%= @event.name %></h1>
      <p> <%= @event.description %></p>
    </div>
    <div class="card-event col-4">
      <h2>organisé par <%= @event.ngo.name %></h2>
      <button class="btn-outlight"> Suivre</button>
      <h3>Infos pratiques</h3>
        <ol style="list-style-type:none;" id="ol-details">
          <li><i class="fas fa-map-marker-alt"></i> <%= @event.address%></li>
          <li><i class="far fa-calendar-alt"></i>
          <% if @event.start_date.to_date == @event.end_date.to_date %>
          <%= I18n.l(@event.start_date, locale: :fr) %> - <%= I18n.l @event.end_date, locale: :fr, format: :hours %>
          <% else %>
          <%= I18n.l(@event.start_date, locale: :fr) %> - <%= I18n.l(@event.end_date, locale: :fr) %>
          <% end %>
          </li>
          <li>Places disponibles : <%= @event.seats_left%></li>
        </ol>
        <% if @event.seats_left.zero? %>
          <button class="btn btn-danger">Complet</button>
        <% elsif user_signed_in? == false %>
          <%= link_to "Participer", event_participations_path(@event), method: :post, id: "register-link", class: "btn btn-primary" %>
        <% elsif current_user.participations.find_by(event_id: @event.id) %>
          <button class="btn btn-success">Inscrit ✅</button>
        <% elsif current_user %>
          <button id="sweet-alert-register" class="btn btn-primary">Participer</button>
          <%= link_to "", event_participations_path(@event), method: :post, id: "register-link", remote: true, class: "hidden" %>
        <% end %>
    </div>
  </div>
</div>
